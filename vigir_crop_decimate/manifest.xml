<package>
  <description brief="vigir_crop_decimate">

     vigir_crop_decimate provides a class for cropping/decimating (binning) images. Based on the crop_decimate nodelet in the image_proc package.

  </description>
  <author>Stefan Kohlbrecher</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/vigir_crop_decimate</url>

  <rosdep name="opencv2"/>

  <depend package="sensor_msgs"/>
  <depend package="cv_bridge"/>
  <depend package="image_transport"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lvigir_crop_decimate" />
  </export>

</package>


